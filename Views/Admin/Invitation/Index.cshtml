@{
    ViewData["Title"] = "Generar Códigos de Invitación";
    Layout = "_AdminLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/invitation.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
}

<div class="page-header">
    <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" class="btn btn-back">
        <i class="fas fa-arrow-left me-2"></i>Volver a Usuarios
    </a>
    <h1>@ViewData["Title"]</h1>
</div>

<div class="row justify-content-center">
    <div class="col-lg-7">
        
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="invitation-success-card">
                <div class="success-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <h4>¡Invitación Enviada!</h4>
                <p>@TempData["SuccessMessage"]</p>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger text-center">
                <strong>Error:</strong> @TempData["ErrorMessage"]
            </div>
        }

        <div class="card form-card mt-4">
            <div class="card-body">
                <div class="form-header">
                    <i class="fas fa-paper-plane"></i>
                    <h5>Nuevo Usuario</h5>
                    <p class="text-muted">Completa el formulario para generar y enviar un código de invitación de un solo uso.</p>
                </div>
                <form asp-action="Generate" method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label">Correo Electrónico del Invitado</label>
                        <input type="email" name="email" id="email" class="form-control" required/>
                    </div>
                    <div class="mb-4">
                        <label class="form-label">Tipo de Rol</label>
                        <select name="isAdmin" class="form-select">
                            <option value="false">Usuario Estándar</option>
                            <option value="true">Administrador</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">
                        Generar y Enviar Invitación
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
}
