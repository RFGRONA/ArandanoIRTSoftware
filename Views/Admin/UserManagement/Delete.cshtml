@model ArandanoIRT.Web._1_Application.DTOs.Admin.UserDto

@{
    ViewData["Title"] = "Confirmar Eliminación";
    Layout = "_AdminLayout";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="alert alert-danger">
    <h3>¿Está seguro de que desea eliminar permanentemente a este usuario?</h3>
    <p>Esta acción no se puede deshacer.</p>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-3">Nombre Completo:</dt>
        <dd class="col-sm-9">@Model.FullName</dd>
        
        <dt class="col-sm-3">Correo Electrónico:</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Rol:</dt>
        <dd class="col-sm-9">@Model.Role</dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <input type="submit" value="Sí, Eliminar Usuario" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>