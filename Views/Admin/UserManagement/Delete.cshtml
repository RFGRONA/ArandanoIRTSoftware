@model ArandanoIRT.Web._1_Application.DTOs.Admin.UserDto

@{
    ViewData["Title"] = "Confirmar Eliminación";
    Layout = "_AdminLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/management.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
}

<div class="delete-page-container">
    <div class="card delete-card">
        <div class="card-header delete-header">
            <h1 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i> @ViewData["Title"]</h1>
        </div>
        <div class="card-body delete-card-body">
            <div class="danger-zone">
                <h4>¿Está seguro de que desea eliminar permanentemente a este usuario?</h4>
                <p class="text-muted">Esta acción es irreversible y todos los datos asociados al usuario se perderán.</p>
            </div>
            
            <hr class="my-4"/>

            <div class="user-details-summary">
                 <h5>Resumen del Usuario a Eliminar:</h5>
                 <dl class="row">
                    <dt class="col-sm-4">Nombre Completo:</dt>
                    <dd class="col-sm-8">@Model.FullName</dd>
                    
                    <dt class="col-sm-4">Correo Electrónico:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Rol:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Role == "Administrador")
                        {
                            <span class="role-badge role-admin"><i class="fas fa-user-shield"></i> @Model.Role</span>
                        }
                        else
                        {
                            <span class="role-badge role-user"><i class="fas fa-user"></i> @Model.Role</span>
                        }
                    </dd>
                 </dl>
            </div>
        </div>
        <div class="card-footer delete-actions">
            <form asp-action="Delete" method="post" class="d-flex justify-content-end gap-2">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <a asp-action="Index" class="btn btn-secondary-custom">Cancelar</a>
                <button type="submit" class="btn btn-danger-custom">
                    <i class="fas fa-trash-alt me-2"></i>Sí, Eliminar Usuario
                </button>
            </form>
        </div>
    </div>
</div>
