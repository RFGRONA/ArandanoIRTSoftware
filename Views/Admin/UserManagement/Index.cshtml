@using ArandanoIRT.Web._1_Application.DTOs.Admin
@model IEnumerable<UserDto>

@{
    ViewData["Title"] = "Gestión de Usuarios";
    Layout = "_AdminLayout";
}


@section Styles {
    <link rel="stylesheet" href="~/css/management.css" asp-append-version="true" /> 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
}

<div class="page-header">
    <h1>@ViewData["Title"]</h1>
    <div class="header-actions">
        <a asp-area="Admin" asp-controller="Invitation" asp-action="Index" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Generar Invitación
        </a>
    </div>
</div>

<p class="lead mb-4">Administra los usuarios del sistema, asciende roles y elimina cuentas.</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="card table-card">
    <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th>Nombre Completo</th>
                <th>Correo Electrónico</th>
                <th>Rol</th>
                <th>Fecha de Registro</th>
                <th style="width: 15%;">Acciones</th>
            </tr>
            </thead>
            <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>
                            @if (user.Role == "Administrador")
                            {
                                <span class="role-badge role-admin"><i class="fas fa-user-shield"></i> @user.Role</span>
                            }
                            else
                            {
                                <span class="role-badge role-user"><i class="fas fa-user"></i> @user.Role</span>
                            }
                        </td>
                        <td>@user.RegisteredDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (user.Role == "Usuario Estándar")
                            {
                                <div class="action-buttons">
                                    <button type="button" class="btn-action promote" title="Ascender a Administrador"
                                            data-bs-toggle="modal" data-bs-target="#promoteUserModal"
                                            data-userid="@user.Id" data-username="@user.FullName">
                                        <i class="fas fa-user-shield"></i>
                                    </button>
                                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn-action delete" title="Eliminar Usuario">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            }
                            else
                            {
                                <span class="text-muted fst-italic">N/A</span>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center py-4">No hay usuarios registrados en el sistema.</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal de Confirmación para Ascender Usuario -->
<div class="modal fade" id="promoteUserModal" tabindex="-1" aria-labelledby="promoteUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header modal-header-warning">
                <h5 class="modal-title" id="promoteUserModalLabel">Confirmar Cambio de Rol</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro de que desea ascender al usuario <strong id="userNameToPromote"></strong> a <strong>Administrador</strong>?</p>
                <div class="alert alert-warning mt-3">
                    <strong>Atención:</strong> Esta acción le otorgará permisos elevados y no se puede revertir fácilmente.
                </div>
            </div>
            <div class="modal-footer">
                <form id="promoteForm" asp-action="PromoteToAdmin" method="post">
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary-outline" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-warning">Sí, Ascender</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var promoteUserModal = document.getElementById('promoteUserModal');
            promoteUserModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var userId = button.getAttribute('data-userid');
                var userName = button.getAttribute('data-username');

                var modalBody = promoteUserModal.querySelector('.modal-body #userNameToPromote');
                modalBody.textContent = userName;

                var form = promoteUserModal.querySelector('#promoteForm');
                // Asegúrate que la URL base sea la correcta para tu enrutamiento
                form.action = '@Url.Content("~/Admin/UserManagement/PromoteToAdmin/")' + userId;
            });
        });
    </script>
}
