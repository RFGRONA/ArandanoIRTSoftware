@using ArandanoIRT.Web._0_Domain.Common
@model IEnumerable<ArandanoIRT.Web._1_Application.DTOs.Device.DeviceSummaryDto>
@{
    ViewData["Title"] = "Gestión de Dispositivos";
    Layout = "_AdminLayout";
}

@section Styles {
     <link rel="stylesheet" href="~/css/devices.css" asp-append-version="true" /> 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
}

<div class="page-header">
    <h1>@ViewData["Title"]</h1>
    <div class="header-actions">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Registrar Nuevo Dispositivo
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null) { <div class="alert alert-success">@TempData["SuccessMessage"]</div> }
@if (ViewData["ErrorMessage"] != null) { <div class="alert alert-danger">@ViewData["ErrorMessage"]</div> }

<div class="card table-card">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Planta</th>
                    <th>Cultivo</th>
                    <th>Estado</th>
                    <th>Activación</th>
                    <th>Registro</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@(item.PlantName ?? "No asignada")</td>
                        <td>@(item.CropName ?? "No asignado")</td>
                        <td>
                            @{
                                var statusClass = "status-inactive";
                                if (string.Equals(item.DeviceStatus.ToString(), "Activo", StringComparison.OrdinalIgnoreCase)) { statusClass = "status-active"; }
                                else if (string.Equals(item.DeviceStatus.ToString(), "Error", StringComparison.OrdinalIgnoreCase)) { statusClass = "status-error"; }
                            }
                            <span class="status-badge @statusClass">@item.DeviceStatus.GetDisplayName()</span>
                        </td>
                        <td>
                             @{
                                var activationClass = "status-inactive";
                                if (string.Equals(item.ActivationStatus.ToString(), "Activado", StringComparison.OrdinalIgnoreCase)) { activationClass = "status-active"; }
                                else if (string.Equals(item.ActivationStatus.ToString(), "No Asignado", StringComparison.OrdinalIgnoreCase)) { activationClass = "status-unassigned"; }
                            }
                            <span class="status-badge @activationClass">@item.ActivationStatus.GetDisplayName()</span>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.RegisteredAt)</td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn-action edit" title="Editar">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn-action details" title="Detalles">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn-action delete" title="Eliminar">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center py-4">No hay dispositivos registrados.</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
