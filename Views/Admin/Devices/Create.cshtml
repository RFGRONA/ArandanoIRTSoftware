@model ArandanoIRT.Web._1_Application.DTOs.Device.DeviceCreateDto
@{
    ViewData["Title"] = "Registrar Nuevo Dispositivo";
    Layout = "_AdminLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/crud-forms.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Estilos para el textarea autoajustable */
        textarea.auto-grow {
            resize: none;
            overflow-y: hidden;
        }
    </style>
}

<div class="page-header">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <form asp-action="Create">
            <div class="card form-card">
                <div class="card-body">
                    @* Contenido del formulario integrado para mayor claridad *@
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">
                            Nombre del Dispositivo
                            <span class="tooltip-icon" data-tooltip="Dale un nombre descriptivo al dispositivo para identificarlo fácilmente (ej. 'Sensor Fila C').">?</span>
                        </label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MacAddress" class="form-label">
                            Dirección MAC (Opcional)
                            <span class="tooltip-icon" data-tooltip="Introduce la dirección MAC del dispositivo si la tienes. Este campo es opcional pero ayuda a una identificación única.">?</span>
                        </label>
                        <input asp-for="MacAddress" class="form-control" />
                        <span asp-validation-for="MacAddress" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">
                            Descripción
                            <span class="tooltip-icon" data-tooltip="Añade una descripción o notas adicionales sobre el dispositivo, como su ubicación exacta o características especiales.">?</span>
                        </label>
                        <textarea asp-for="Description" class="form-control auto-grow" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PlantId" class="form-label">
                            Planta Asignada
                            <span class="tooltip-icon" data-tooltip="Asocia este dispositivo a una planta específica. Los datos que recoja se vincularán directamente a ella.">?</span>
                        </label>
                        <select asp-for="PlantId" class="form-select" asp-items="Model.AvailablePlants">
                            <option value="">-- Seleccione una Planta --</option>
                        </select>
                        <span asp-validation-for="PlantId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DataCollectionIntervalMinutes" class="form-label">
                            Intervalo de Recolección de Datos (minutos)
                             <span class="tooltip-icon" data-tooltip="Define cada cuántos minutos el dispositivo debe tomar y enviar datos. Un intervalo más corto ofrece más detalle pero consume más recursos.">?</span>
                        </label>
                        <input asp-for="DataCollectionIntervalMinutes" type="number" class="form-control" />
                        <span asp-validation-for="DataCollectionIntervalMinutes" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-action="Index" class="btn btn-secondary-outline">Cancelar</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Registrar Dispositivo
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const textarea = document.querySelector('textarea.auto-grow');

            if (textarea) {
                const adjustHeight = () => {
                    textarea.style.height = 'auto'; // Resetea la altura para recalcular
                    textarea.style.height = (textarea.scrollHeight) + 'px'; // Ajusta la altura al contenido
                };

                // Llama a la función cuando el usuario escribe
                textarea.addEventListener('input', adjustHeight);

                // Ajusta la altura inicial por si hay contenido precargado
                adjustHeight();
            }
        });
    </script>
}
