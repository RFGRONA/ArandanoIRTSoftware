@model ArandanoIRT.Web._1_Application.DTOs.Admin.RegisterDto
@inject Microsoft.Extensions.Options.IOptions<ArandanoIRT.Web._2_Infrastructure.Settings.TurnstileSettings> TurnstileSettings
@inject IWebHostEnvironment Env 
@{
    Layout = null;
    ViewData["Title"] = "Registro de Nuevo Usuario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Arandano IRT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true"/> 
    @if (!Env.IsDevelopment()) 
    {
        <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
    }

</head>
<body>

<div class="login-card">
    <a asp-area="Admin" asp-controller="Support" asp-action="PublicHelp" class="btn-help">?</a>

    <div class="login-header">
        <span class="emoji">游닇</span>
        <h1>Crear Cuenta</h1>
    </div>

    <form asp-action="Register" method="post">
        <div asp-validation-summary="All" class="text-danger" role="alert"></div>

        <div class="form-group mb-3">
            <label asp-for="InvitationCode" class="form-label"></label>
            <input asp-for="InvitationCode" class="form-control" placeholder="Pega tu c칩digo de invitaci칩n"/>
            <span asp-validation-for="InvitationCode" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 form-group mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" placeholder="Tu nombre"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" placeholder="Tu apellido"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Escribe tu correo"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Crea una contrase침a"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="ConfirmPassword" class="form-label"></label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirma tu contrase침a"/>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        
        <div class="d-flex justify-content-center">
            <div class="cf-turnstile mb-3" data-sitekey="@TurnstileSettings.Value.SiteKey"></div>
        </div>

        <div class="action-buttons">
            <button type="submit" class="btn btn-primary w-100">Crear Cuenta</button>
            <a asp-action="Login" class="btn btn-secondary w-100">Ya tengo una cuenta</a>
        </div>
    </form>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<partial name="_ValidationScriptsPartial"/>

</body>
</html>
