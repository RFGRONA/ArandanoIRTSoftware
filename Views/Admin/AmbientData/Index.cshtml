@model ArandanoIRT.Web._1_Application.DTOs.Common.PagedResultDto<ArandanoIRT.Web._1_Application.DTOs.SensorData.SensorDataDisplayDto>
@using ArandanoIRT.Web._1_Application.Services.Contracts
@{
    ViewData["Title"] = "Datos Ambientales";
    Layout = "_AdminLayout";
    var currentFilters = ViewBag.CurrentFilters as DataQueryFilters ?? new DataQueryFilters();
    
    var routeData = new RouteValueDictionary();
    foreach (var key in Context.Request.Query.Keys)
    {
        if (!key.Equals("PageNumber", StringComparison.OrdinalIgnoreCase))
        {
            routeData[key] = Context.Request.Query[key];
        }
    }
    var maxDate = DateTime.Now.ToString("yyyy-MM-dd");
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/data-tables.css" asp-append-version="true" />
}

<div class="page-header">
    <h1>@ViewData["Title"]</h1>
    <div class="header-actions">
        <a href="#" class="btn btn-outline-secondary">
            <i class="fas fa-download"></i> Descargar
        </a>
        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse" aria-expanded="false" aria-controls="filterCollapse">
            <i class="fas fa-filter"></i> Filtros
        </button>
    </div>
</div>

<div class="collapse show" id="filterCollapse">
    <div class="card filter-card mb-4">
        <form asp-action="Index" method="get">
            <input type="hidden" name="PageNumber" value="1" />
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="CropId" class="form-label">Cultivo</label>
                    <select name="CropId" id="CropId" class="form-select" asp-items="ViewBag.AvailableCrops"></select>
                </div>
                <div class="col-md-3">
                    <label for="PlantId" class="form-label">Planta</label>
                    <select name="PlantId" id="PlantId" class="form-select" asp-items="ViewBag.AvailablePlants"></select>
                </div>
                <div class="col-md-3">
                    <label for="DeviceId" class="form-label">Dispositivo</label>
                    <select name="DeviceId" id="DeviceId" class="form-select" asp-items="ViewBag.AvailableDevices"></select>
                </div>
                <div class="col-md-3">
                    <label for="PageSizeForm" class="form-label">Resultados por Página</label>
                    <select name="PageSize" id="PageSizeForm" class="form-select">
                        <option value="10" selected="@(currentFilters.PageSize == 10)">10</option>
                        <option value="25" selected="@(currentFilters.PageSize == 25)">25</option>
                        <option value="50" selected="@(currentFilters.PageSize == 50)">50</option>
                    </select>
                </div>
            </div>
            <hr class="filter-divider">
            <div class="row g-3">
                <div class="col-md-4">
                    <label for="StartDate" class="form-label">Desde</label>
                    <input type="date" name="StartDate" id="StartDate" class="form-control" value="@currentFilters.StartDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-4">
                    <label for="EndDate" class="form-label">Hasta</label>
                    <input type="date" name="EndDate" id="EndDate" class="form-control" value="@currentFilters.EndDate?.ToString("yyyy-MM-dd")" max="@maxDate" />
                </div>
                <div class="col-md-4 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary w-100">Aplicar Filtros</button>
                    <a asp-action="Index" class="btn btn-light w-100">Limpiar</a>
                </div>
            </div>
        </form>
    </div>
</div>


@if (Model == null || !Model.Items.Any())
{
    <div class="alert alert-info text-center">
        No se encontraron datos con los filtros aplicados.
    </div>
}
else
{
    <div class="card table-card">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th class="text-center">Dispositivo</th>
                        <th class="text-center">Planta</th>
                        <th class="text-center">Temp. °C</th>
                        <th class="text-center">Hum. %</th>
                        <th class="text-center">Luz (lx)</th>
                        <th class="text-center">Temp. Ciudad °C</th>
                        <th class="text-center">Hum. Ciudad %</th>
                        <th class="text-center">Clima</th>
                        <th class="text-center">Otros Datos</th>
                        <th class="text-center">Fecha Registro</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td class="text-center">@item.DeviceName</td>
                        <td class="text-center">@item.PlantName</td>
                        <td class="text-center">@item.Temperature.ToString("0.0")°C</td>
                        <td class="text-center">@item.Humidity.ToString("0")%</td>
                        <td class="text-center">
                            @(item.Light.HasValue ? item.Light.Value.ToString("N0") : "-")
                        </td>
                        <td class="text-center">@(item.CityTemperature?.ToString("0.0") ?? "-")°C</td>
                        <td class="text-center">@(item.CityHumidity?.ToString("0") ?? "-")%</td>
                        <td class="text-center">@(item.CityWeatherCondition ?? "N/A")</td>
                        
                        <td>
                            <ul class="list-unstyled mb-0" style="font-size: 0.8rem;">
                                
                                @if (item.OtherData != null)
                                {
                                    @foreach (var extra in item.OtherData)
                                    {
                                        <li><strong>@extra.Key:</strong> @extra.Value</li>
                                    }
                                }
                            </ul>
                        </td>

                        <td class="text-center">@item.RecordedAt.ToString("dd/MM/yy HH:mm")</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <div class="card-footer">
        <nav class="pagination-container" aria-label="Paginación de datos ambientales">
            <span class="pagination-summary">Mostrando @Model.Items.Count() de @Model.TotalCount registros</span>
            <ul class="pagination">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-all-route-data="routeData.ToDictionary(k => k.Key, v => v.Value?.ToString())" asp-route-pageNumber="@(Model.PageNumber - 1)">Anterior</a>
                    </li>

                    @if (Model.PageNumber > 3)
                    {
                        <a class="page-link" asp-action="Index" asp-all-route-data="routeData.ToDictionary(k => k.Key, v => v.Value?.ToString())" asp-route-pageNumber="1">1</a>
                        @if (Model.PageNumber > 4)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }

                    @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-all-route-data="routeData.ToDictionary(k => k.Key, v => v.Value?.ToString())" asp-route-pageNumber="@i">@i</a>
                        </li>
                    }

                    @if (Model.PageNumber + 2 < Model.TotalPages)
                    {
                        @if (Model.PageNumber + 3 < Model.TotalPages)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                        <a class="page-link" asp-action="Index" asp-all-route-data="routeData.ToDictionary(k => k.Key, v => v.Value?.ToString())" asp-route-pageNumber="@Model.TotalPages">@Model.TotalPages</a>
                    }
                    
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-all-route-data="routeData.ToDictionary(k => k.Key, v => v.Value?.ToString())" asp-route-pageNumber="@(Model.PageNumber + 1)">Siguiente</a>
                    </li>
                </ul>
        </nav>
    </div>
    </div>
}
