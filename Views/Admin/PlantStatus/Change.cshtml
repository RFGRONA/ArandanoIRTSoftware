@using ArandanoIRT.Web._0_Domain.Enums
@model ArandanoIRT.Web._1_Application.DTOs.Plants.PlantStatusUpdateDto
@{
    ViewData["Title"] = "Cambiar Estado de Planta";
    Layout = "_AdminLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/crud-forms.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Estilo para el textarea autoajustable */
        textarea.auto-grow {
            resize: none;
            overflow-y: hidden;
        }
    </style>
}

<div class="page-header">
    <h1>@ViewData["Title"]</h1>
    <h4>Planta: @Model.PlantName</h4>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <form asp-action="Change" method="post">
            <input type="hidden" asp-for="PlantId"/>
            <div class="card form-card">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="NewStatus" class="form-label">Nuevo Estado</label>
                        <select asp-for="NewStatus" class="form-select" asp-items="ViewBag.AvailableStatuses">
                            <option value="">-- Seleccione un nuevo estado --</option>
                        </select>
                        <span asp-validation-for="NewStatus" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Observation" class="form-label"></label>
                        <textarea id="observation-textarea" asp-for="Observation" class="form-control auto-grow" rows="4" placeholder="A침ade una observaci칩n o justificaci칩n para el cambio de estado..."></textarea>
                        <span asp-validation-for="Observation" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-controller="Plants" asp-action="Details" asp-route-id="@Model.PlantId" class="btn btn-secondary-outline">Cancelar</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Guardar Cambio
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const textarea = document.getElementById('observation-textarea');

            if (textarea) {
                const adjustHeight = () => {
                    textarea.style.height = 'auto'; // Resetea la altura para recalcular
                    textarea.style.height = (textarea.scrollHeight) + 'px'; // Ajusta la altura al contenido
                };

                // Llama a la funci칩n cuando el usuario escribe
                textarea.addEventListener('input', adjustHeight);

                // Ajusta la altura inicial por si hay contenido precargado
                adjustHeight();
            }
        });
    </script>
}
