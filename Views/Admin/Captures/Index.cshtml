@model ArandanoIRT.Web._1_Application.DTOs.Common.PagedResultDto<ArandanoIRT.Web._1_Application.DTOs.SensorData.ThermalCaptureSummaryDto>
@using ArandanoIRT.Web._1_Application.Services.Contracts
@{
    ViewData["Title"] = "Capturas Térmicas y RGB";
    Layout = "_AdminLayout";
    var currentFilters = ViewBag.CurrentFilters as DataQueryFilters ?? new DataQueryFilters();
    // Creamos un diccionario con los filtros actuales para la paginación
    var routeData = Context.Request.Query.ToDictionary(q => q.Key, q => q.Value.ToString());
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/data-tables.css" asp-append-version="true" />
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">@TempData["ErrorMessage"]</div>
}
@if (ViewData["ErrorMessage"] != null && TempData["ErrorMessage"] == null)
{
    <div class="alert alert-danger" role="alert">@ViewData["ErrorMessage"]</div>
}

<div class="page-header">
    <h1>@ViewData["Title"]</h1>
    <div class="header-actions">
        <a href="#" class="btn btn-outline-secondary">
            <i class="fas fa-download"></i> Descargar
        </a>
        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse" aria-expanded="false" aria-controls="filterCollapse">
            <i class="fas fa-filter"></i> Filtros
        </button>
    </div>
</div>

<div class="collapse show" id="filterCollapse">
    <div class="card filter-card mb-4">
        <form asp-action="Index" method="get">
            <input type="hidden" name="PageNumber" value="1" />
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="CropId" class="form-label">Cultivo</label>
                    <select name="CropId" id="CropId" class="form-select" asp-items="ViewBag.AvailableCrops"></select>
                </div>
                <div class="col-md-3">
                    <label for="PlantId" class="form-label">Planta</label>
                    <select name="PlantId" id="PlantId" class="form-select" asp-items="ViewBag.AvailablePlants"></select>
                </div>
                <div class="col-md-3">
                    <label for="DeviceId" class="form-label">Dispositivo</label>
                    <select name="DeviceId" id="DeviceId" class="form-select" asp-items="ViewBag.AvailableDevices"></select>
                </div>
                <div class="col-md-3">
                    <label for="PageSizeForm" class="form-label">Resultados por Página</label>
                    <select name="PageSize" id="PageSizeForm" class="form-select" onchange="this.form.submit()">
                        <option value="10" selected="@(currentFilters.PageSize == 10)">10</option>
                        <option value="20" selected="@(currentFilters.PageSize == 20)">20</option>
                        <option value="50" selected="@(currentFilters.PageSize == 50)">50</option>
                    </select>
                </div>
            </div>
            <hr class="filter-divider">
            <div class="row g-3">
                 <div class="col-md-4">
                    <label for="StartDate" class="form-label">Desde</label>
                    <input type="datetime-local" name="StartDate" id="StartDate" class="form-control" value="@currentFilters.StartDate?.ToString("yyyy-MM-ddTHH:mm")" />
                </div>
                <div class="col-md-4">
                    <label for="EndDate" class="form-label">Hasta</label>
                    <input type="datetime-local" name="EndDate" id="EndDate" class="form-control" value="@currentFilters.EndDate?.ToString("yyyy-MM-ddTHH:mm")" />
                </div>
                <div class="col-md-4 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary w-100">Aplicar Filtros</button>
                    <a asp-action="Index" class="btn btn-light w-100">Limpiar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model == null || !Model.Items.Any())
{
    <div class="alert alert-info text-center">
        No se encontraron capturas con los filtros aplicados.
    </div>
}
else
{
    <div class="card table-card">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Dispositivo</th>
                        <th>Planta</th>
                        <th>Temp. Máx</th>
                        <th>Temp. Mín</th>
                        <th>Temp. Prom</th>
                        <th>Img. RGB</th>
                        <th>Fecha Registro</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@Html.DisplayFor(modelItem => item.DeviceName)</td>
                            <td>@Html.DisplayFor(modelItem => item.PlantName)</td>
                            <td>@item.MaxTemp?.ToString("0.0")°C</td>
                            <td>@item.MinTemp?.ToString("0.0")°C</td>
                            <td>@item.AvgTemp?.ToString("0.0")°C</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.RgbImagePath))
                                {
                                    <span class="badge bg-success">Sí</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </td>
                            <td>@item.RecordedAt.ToString("dd/MM/yy HH:mm")</td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn-action" title="Ver Detalles">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <nav class="pagination-container" aria-label="Paginación de capturas">
                <span class="pagination-summary">Mostrando @Model.Items.Count() de @Model.TotalCount registros</span>
                <ul class="pagination">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-all-route-data="routeData" asp-route-pageNumber="@(Model.PageNumber - 1)">Anterior</a>
                    </li>

                    @if (Model.PageNumber > 3)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-all-route-data="routeData" asp-route-pageNumber="1">1</a>
                        </li>
                        @if (Model.PageNumber > 4)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }

                    @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-all-route-data="routeData" asp-route-pageNumber="@i">@i</a>
                        </li>
                    }

                    @if (Model.PageNumber + 2 < Model.TotalPages)
                    {
                        @if (Model.PageNumber + 3 < Model.TotalPages)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-all-route-data="routeData" asp-route-pageNumber="@Model.TotalPages">@Model.TotalPages</a>
                        </li>
                    }

                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-all-route-data="routeData" asp-route-pageNumber="@(Model.PageNumber + 1)">Siguiente</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
}
