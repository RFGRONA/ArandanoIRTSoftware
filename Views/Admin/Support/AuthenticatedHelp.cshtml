@model ArandanoIRT.Web._1_Application.DTOs.Admin.AuthenticatedHelpRequestDto
@{
    ViewData["Title"] = "Solicitar Ayuda";
    Layout = "_AdminLayout";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/data-tables.css" asp-append-version="true" />
    <style>
        /* Para que el textarea no crezca a no ser que el usuario escriba */
        #message-textarea {
            resize: none;
            overflow-y: hidden; /* Oculta la barra de scroll hasta que sea necesario */
        }
    </style>
}

<div class="page-header">
    <h1>@ViewData["Title"]</h1>
</div>

<p class="lead text-center mb-4">
    Si tienes algún problema o duda, llena el siguiente formulario y un administrador se pondrá en contacto contigo a tu correo registrado.
</p>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card table-card">
            <div class="card-body p-4">
                <form asp-action="AuthenticatedHelp" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Subject" class="form-label fw-bold">Asunto</label>
                        <input asp-for="Subject" class="form-control"/>
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Message" class="form-label fw-bold">Mensaje</label>
                        <textarea id="message-textarea" asp-for="Message" class="form-control" rows="6"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100 py-2">
                        <i class="fas fa-paper-plane me-2"></i>Enviar Solicitud
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const textarea = document.getElementById('message-textarea');

            if (textarea) {
                // Función para ajustar la altura
                const adjustHeight = () => {
                    textarea.style.height = 'auto'; // Resetea la altura
                    textarea.style.height = (textarea.scrollHeight) + 'px'; // Ajusta a la altura del contenido
                };

                // Llama a la función cuando el usuario escribe
                textarea.addEventListener('input', adjustHeight);

                
                adjustHeight();
            }
        });
    </script>
}
