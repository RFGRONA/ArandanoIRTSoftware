@model ArandanoIRT.Web._1_Application.DTOs.Admin.DashboardViewModel
@using System.Text.Json
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";

    var tempDataJson = Model.TemperatureChartData != null ? JsonSerializer.Serialize(Model.TemperatureChartData) : "{\"Labels\":[], \"Values\":[], \"DataSetLabel\":\"Temperatura\"}";
    var humDataJson = Model.HumidityChartData != null ? JsonSerializer.Serialize(Model.HumidityChartData) : "{\"Labels\":[], \"Values\":[], \"DataSetLabel\":\"Humedad\"}";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
}

<div class="dashboard-header">
    <h1>@ViewData["Title"]</h1>
    <div class="filter-container">
        <label for="cropFilter" class="form-label">Filtrar por</label>
        <select id="cropFilter" class="form-select" asp-for="SelectedCropId" asp-items="Model.AvailableCrops" onchange="this.form.submit()">
        </select>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 col-md-6 col-12 mb-4">
        <div class="kpi-card">
            <div class="kpi-icon icon-temp">
                <i class="fas fa-thermometer-half"></i>
            </div>
            <div class="kpi-content">
                <span class="kpi-title">Temperatura</span>
                <span class="kpi-value">@Model.LatestAmbientData?.Temperature.ToString("0.0")°C</span>
                <span class="kpi-description">Última lectura ambiental</span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 col-12 mb-4">
        <div class="kpi-card">
            <div class="kpi-icon icon-humidity">
                <i class="fas fa-tint"></i>
            </div>
            <div class="kpi-content">
                <span class="kpi-title">Humedad</span>
                <span class="kpi-value">@Model.LatestAmbientData?.Humidity.ToString("0")%</span>
                <span class="kpi-description">Última lectura ambiental</span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 col-12 mb-4">
        <div class="kpi-card">
            <div class="kpi-icon icon-light">
                <i class="fas fa-sun"></i>
            </div>
            <div class="kpi-content">
                <span class="kpi-title">Luminosidad</span>
                <span class="kpi-value">@Model.LatestAmbientData?.Light?.ToString("0") lx</span>
                <span class="kpi-description">Última lectura ambiental</span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 col-12 mb-4">
        <div class="kpi-card">
            <div class="kpi-icon icon-thermal">
                <i class="fas fa-fire"></i>
            </div>
            <div class="kpi-content">
                <span class="kpi-title">Temp. Máx. Térmica</span>
                <span class="kpi-value">@Model.ThermalStatistics?.LatestMaxTemp?.ToString("0.0")°C</span>
                <span class="kpi-description">Última captura térmica</span>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mb-4">
        <div class="card chart-card">
            <div class="card-body">
                <h5 class="card-title">Resumen de Temperatura</h5>
                <canvas id="temperatureChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-4 mb-4">
        <div class="card chart-card">
            <div class="card-body">
                <h5 class="card-title">Humedad Relativa</h5>
                <canvas id="humidityChart"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card table-card">
            <div class="card-body">
                <h5 class="card-title">Últimas Capturas</h5>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID Planta</th>
                                <th>Fecha</th>
                                <th>Temp. Máx</th>
                                <th>Temp. Prom</th>
                                <th>Temp. Mín</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <!--Estos son datos de prueba insertados directamente en el HTML-->
                                <td>Planta arandano</td>
                                <td>14/07/2025 14:30</td>
                                <td>28.5°C</td>
                                <td>25.1°C</td>
                                <td>22.9°C</td>
                                <td><span class="badge status-ok">Normal</span></td>
                            </tr>
                             <tr>
                                <td>Planta de arandano 2</td>
                                <td>14/07/2025 14:25</td>
                                <td>31.2°C</td>
                                <td>29.8°C</td>
                                <td>28.5°C</td>
                                <td><span class="badge status-alerta">Alerta</span></td>
                            </tr>
                            </tbody>
                    </table>
                </div>
                 <nav class="pagination-container">
                    <ul class="pagination">
                        <li class="page-item disabled"><a class="page-link" href="#">Anterior</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">Siguiente</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js"></script>
    <script>
        // Aqui ira el codigo Javascript.
        document.addEventListener('DOMContentLoaded', function () {
           // Aquí se inicializarían los gráficos 'temperatureChart' y 'humidityChart'
           // usando la lógica que ya tenías.
        });
    </script>
}