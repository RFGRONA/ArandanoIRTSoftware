<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - AIRT Provisional Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    @await RenderSectionAsync("Styles", false)
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">AIRT Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                    </li>

                    @* Menú desplegable "Gestión" *@
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownGestion" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            Gestión
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownGestion">
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Crops" asp-action="Index">Cultivos</a>
                            </li>
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Plants" asp-action="Index">Plantas</a>
                            </li>
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Devices" asp-action="Index">Dispositivos</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="PlantStatus"
                                   asp-action="History">Historial de Estados</a></li>
                        </ul>
                    </li>

                    @* Elementos desagrupados de "Visualizar Datos" *@
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="AmbientData" asp-action="Index">Datos
                            Ambientales</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Captures" asp-action="Index">Capturas
                            (IRT/RGB)</a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Observation" asp-action="Index">Bitácora</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownAccount" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            Cuenta
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownAccount">
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Manage" asp-action="Index">Mi
                                    Perfil</a></li>
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Support" asp-action="Index">Solicitar
                                    Ayuda</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Invitation"
                                   asp-action="Index">Gestionar Invitaciones</a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <form asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post"
                              id="logoutForm" class="form-inline">
                            <button type="submit" class="nav-link btn btn-link text-dark">Cerrar Sesión</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; @DateTime.Now.Year - AIRT Provisional
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>