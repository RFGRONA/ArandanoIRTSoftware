@* El modelo para esta vista será simplemente el nombre del usuario: string *@
@model string

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <style>
        body {
            font-family: Arial, sans-serif;
            color: #333;
        }

        .container {
            padding: 25px;
            border: 1px solid #e8e8e8;
            border-radius: 8px;
            max-width: 600px;
            margin: auto;
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

        .footer {
            margin-top: 20px;
            font-size: 12px;
            color: #888;
            text-align: center;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="header">
        <h2>Confirmación de Cambio de Contraseña</h2>
    </div>
    <p>Hola, @Model,</p>
    <p>Te confirmamos que la contraseña de tu cuenta en Arandano IRT ha sido cambiada exitosamente.</p>
    <p><strong>Si no realizaste este cambio, por favor, contacta a soporte inmediatamente o utiliza la opción de "Olvidé
            mi contraseña" para asegurar tu cuenta.</strong></p>
    <div class="footer">
        <p>Gracias,<br>El equipo de Arandano IRT</p>
    </div>
</div>
</body>
</html>